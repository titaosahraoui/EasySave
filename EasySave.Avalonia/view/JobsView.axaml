<UserControl xmlns="https://github.com/avaloniaui">
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Backup Jobs" FontSize="20"/>

        <!-- Mock Job List -->
        <StackPanel Spacing="10">
            <Border Background="#252526" CornerRadius="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Documents Backup" FontWeight="Bold"/>
                    <TextBlock Text="Source: C:\Users\Public\Documents"/>
                    <TextBlock Text="Target: D:\Backups\Documents"/>
                    <TextBlock Text="Type: Full Backup"/>
                </StackPanel>
            </Border>

            <Border Background="#252526" CornerRadius="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Photos Backup" FontWeight="Bold"/>
                    <TextBlock Text="Source: C:\Users\Public\Pictures"/>
                    <TextBlock Text="Target: D:\Backups\Photos"/>
                    <TextBlock Text="Type: Differential"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Button Content="➕ Add New Job" Width="150" HorizontalAlignment="Left"/>
    </StackPanel>
</UserControl>